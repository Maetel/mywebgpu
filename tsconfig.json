{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2017", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@webgpu/types", "./node_modules/@types"],
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "dist", "webpack.config.js"]
}
